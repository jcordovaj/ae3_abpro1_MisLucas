<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Este fondo solo usa un <shape> simple, eliminando dependencias de otros drawables
         para evitar el error Resources$NotFoundException. -->
    <solid android:color="#FFFFFF"/>
    <!-- Borde con un color gris suave -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/>
    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp"/>
    <!-- Espaciado interno para el texto y la flecha nativa del Spinner -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>