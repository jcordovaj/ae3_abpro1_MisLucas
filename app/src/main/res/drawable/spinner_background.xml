<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Un rectángulo simple con borde, para simular un fondo de Spinner. -->
    <item>
        <shape android:shape="rectangle">
            <!-- Relleno (fondo) del Spinner -->
            <solid android:color="#F0F0F0"/>
            <!-- Borde del Spinner -->
            <stroke
                android:width="1dp"
                android:color="#C0C0C0"/>
            <!-- Esquinas redondeadas -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Pequeño margen a la derecha para dejar espacio para la flecha de la Spinner (opcional) -->
    <item android:right="12dp">
        <bitmap
            android:src="@drawable/ic_spinner_dropdown"
            android:gravity="end|center_vertical" />
    </item>
</layer-list>
