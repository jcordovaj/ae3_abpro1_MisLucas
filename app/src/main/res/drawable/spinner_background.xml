<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Fondo del Spinner (Relleno, Borde y Esquinas redondeadas) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Relleno (fondo) del Spinner (usando tu color actual) -->
            <solid android:color="#F0F0F0"/>
            <!-- Borde del Spinner (usando tu color actual) -->
            <stroke
                android:width="1dp"
                android:color="#C0C0C0"/>
            <!-- Esquinas redondeadas -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!--
        Capa 2: Padding Interno para el contenido del Spinner.
        El padding a la derecha (40dp) deja espacio para la flecha de dropdown
        que el sistema añadirá automáticamente.
    -->
    <item android:left="12dp" android:right="40dp">
        <!-- Contenedor de padding transparente -->
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
